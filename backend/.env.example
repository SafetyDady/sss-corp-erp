# ============================================================
# SSS Corp ERP — Backend Environment Variables
# Copy this file to .env and configure for your environment
# ============================================================

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/sss_corp_erp

# Redis
REDIS_URL=redis://redis:6379/0

# JWT — MUST change in production!
JWT_SECRET_KEY=change-this-to-a-random-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173

# Environment: development | staging | production
ENVIRONMENT=development

# Email (optional — disabled by default)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@sss-corp.com
# EMAIL_ENABLED=false

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Sentry (optional — error monitoring)
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
